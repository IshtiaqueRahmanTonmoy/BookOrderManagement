<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.snackbar.BookRequistionActivity"
    tools:showIn="@layout/activity_addnewexpense"
    xmlns:android="http://schemas.android.com/apk/res/android">


  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/content_book_requistion"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Destination from"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination from.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Destination to.."
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination to.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="Name of vehicle"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of vehicle"
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>


    <TextView
        android:layout_width="fill_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="Cost"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Distance in km"
        android:textAllCaps="true" />
    <EditText
        android:id="@+id/onudanEdit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance in km.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Mobile rent"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile rent.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Comensation"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Compensation.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Packet widthdraw"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Packet widthdraw.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Other cost"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Other cost.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textStyle="bold"
        android:text="Total"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/onudanEdit9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total.."
        android:textCursorDrawable="@drawable/text_cursor_cyan"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="Expense type"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"/>

    <Spinner
        android:id="@+id/expensetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

      <Button
          android:id="@+id/button1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Submit"
          style="@style/Widget.AppCompat.Button.Colored"
          android:theme="@style/MyButton"/>
      <Button
          android:id="@+id/button2"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Clear"
          style="@style/Widget.AppCompat.Button.Colored"
          android:theme="@style/MyButton" />

    </LinearLayout>
  </LinearLayout>
</ScrollView>